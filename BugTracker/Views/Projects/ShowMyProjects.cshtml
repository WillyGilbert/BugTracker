@model IEnumerable<BugTracker.Models.Project>

@{
    ViewBag.Title = "ShowMyProjects";
}

<h2>All My Projects</h2>
@if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}


<div style="text-align:end">
    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
    {
        <button style="background-color:burlywood">@Html.ActionLink("All Projects", "Index") </button>
    }

    @*<button style="background-color:cadetblue">@Html.ActionLink("My Projects", "ShowMyProjects")</button>*@
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ProjectName")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <td>
                    @Html.ActionLink("Show Users", "ShowAllUsers", new { projectId = item.Id })
                </td>
            }

        </tr>
    }

</table>
