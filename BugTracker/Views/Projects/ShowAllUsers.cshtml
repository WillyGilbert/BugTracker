@model IEnumerable<BugTracker.Models.ApplicationUser>

@{
    ViewBag.Title = "ShowAllUsers";
}

<h2>Show All Users Of The Project</h2>

<p>
    @Html.ActionLink("Assign User", "AssignUserToProject", new { projectId = @ViewBag.ProjectId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("Remove From the Project", "RemoveUserFromProject", new { userId = item.Id, projectId = @ViewBag.ProjectId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>