@model IPagedList<BugTracker.Models.Ticket>
@using Microsoft.AspNet.Identity;
@using PagedList.Mvc;
@using PagedList;
@using C1.Web.Mvc.Grid;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Submitter"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

@using (Html.BeginForm())
{
    <p>
        @Html.Raw("Sort By: ")
        @Html.DropDownList("SelectSort", (SelectList)ViewBag.Values, new { onchange = "this.form.submit();" })
        @Html.Hidden("UserId", (object)ViewBag.UserId)
    </p>
}

@using (Html.BeginForm())
{
<p>
    @Html.Raw("Filter By: ")
    @Html.DropDownList("SelectFilter", (SelectList)ViewBag.Values)
    @Html.TextBox("FilterString")
    @Html.Hidden("UserId", (object)ViewBag.UserId)
    <input type="submit" value="Filter" />
</p>
}


@using (Html.BeginForm())
{
    <p>
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

