
@{
    ViewBag.Title = "AssignUserToProject";
}

<h2>Assign User To Project</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>


            <div class="form-group">
                @Html.Label("Project Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @ViewBag.ProjectName
                    @*@Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Id", (SelectList)ViewBag.UserId, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to List", "ShowAllUsers", new { projectId = @ViewBag.ProjectId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

